<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgfood"
        tools:context=".MainActivity">

  <ImageView
          android:layout_width="200dp"
          android:layout_height="200dp"

          android:layout_gravity="center"
          android:layout_marginTop="100dp"
          app:srcCompat="@drawable/hungrynewnewnew" android:id="@+id/imageView"/>

  <Button android:layout_width="150dp"
          android:layout_height="50dp"

          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:text="ADD IT !"
          android:textColor="#FFFFFF"

          android:clickable="true"
          android:background="@drawable/rec"
          android:id="@+id/start"
  />

  <Button android:layout_width="150dp"
          android:layout_height="50dp"

          android:layout_marginTop="10dp"
          android:textColor="#FFFFFF"

          android:layout_gravity="center"
          android:background="@drawable/rec2"

          android:id="@+id/mainpage"
          android:text="SHAKE IT !"
  />

  <Button android:layout_width="150dp"
          android:layout_height="50dp"

          android:layout_marginTop="10dp"
          android:textColor="#000000"

          android:layout_gravity="center"
          android:background="@drawable/rec3"

          android:id="@+id/listitem"
          android:text="VIEW IT !"
  />


</LinearLayout>