<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainApp">

    <ImageView
            android:id="@+id/showimage"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/ic_launcher_background"
    />
    <TextView android:layout_width="300dp"
              android:layout_height="50dp"
              android:layout_gravity="center"

              android:layout_marginTop="30dp"
              android:background="@drawable/rec3"
            android:padding="10dp"
              android:id="@+id/restaurantdisplay"
              android:text="SHOW RESTAURANT'S NAME"
              android:gravity="center"
              android:textSize="20dp"
    />
    <TextView android:layout_width="300dp"
              android:layout_height="50dp"
              android:layout_gravity="center"
              android:textColor="#FFFFFF"
              android:background="@drawable/rec"
              android:padding="10dp"
              android:textSize="20dp"
              android:text="SHOW FOOD'S NAME"
              android:gravity="center"
              android:id="@+id/tries"
              android:clickable="true"
    />
    <Button

            android:text="GO TO LIST >>>"
            android:background="@drawable/rec6"
            android:layout_marginTop="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="230dp"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/button"/>


</LinearLayout>